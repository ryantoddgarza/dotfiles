#!/bin/bash

# description: Cleanup macOS
# author: Ryan Todd Garza <ryantoddgarza@gmail.com>

set -e -o pipefail

exit_trap() {
  # Invalidate cached credentials
  sudo -k
}

trap exit_trap EXIT

# Validate sudo user
sudo -v

# HELPER FUNCTIONS

prefer_empty_dir() {
  if [ "$(ls "$1")" ]
  then
    echo "Dirty: Unnecessary items in $(basename "$1")"
  fi
}

# CLEANUP FUNCTIONS

clean_files() {
  echo '› clean_files'
  prefer_empty_dir "$HOME"/Desktop
  prefer_empty_dir "$HOME"/Downloads
}

clean_system() {
  echo '› clean_system'
  # Flush disk cache
  sudo purge
  # Flush DNS cache
  sudo dscacheutil -flushcache
  sudo killall -HUP mDNSResponder
  # Remove user logs
  sudo rm -rf "$HOME"/Library/Logs/*
  # Remove system logs
  sudo rm -rf /private/var/log/*
  # Remove .DS_Store files
  find "$HOME" -type f -name '.DS_Store' -delete
}

empty_trash() {
  echo '› empty_trash'
  sudo rm -rf "$HOME"/.Trash/{.[!.],..?,}*
}

main() {
  clean_system
  clean_files
  empty_trash
}

main
