#!/bin/bash

# Cleanup local environment

set -e -o pipefail

exit_trap() {
  # Invalidate cached credentials
  sudo -k
}

trap exit_trap EXIT

# Validate sudo user
sudo -v

clean_files() {
  echo '› clean_files'
  dangerously_delete_files || true
  prefer_empty_dir "$HOME/Desktop"
  prefer_empty_dir "$HOME/Downloads"
}

clean_packages() {
  echo '› clean_packages'
  brew cleanup
}

clean_system() {
  echo '› clean_system'
  sudo purge
}

dangerously_delete_files() {
  rm -rf $HOME/Library/Logs/*
  find $HOME -type f -name '.DS_Store' -delete
}

empty_trash() {
  echo '› empty_trash'
  sudo rm -rf $HOME/.Trash/{.[!.],..?,}*
}

prefer_empty_dir() {
  contents_of_dir=$(ls $1 | wc -l)

  if [ $contents_of_dir -gt 0 ]
  then
    echo "dirty: Unnecessary items in $(basename $1)"
  fi
}

main() {
  clean_packages
  clean_system
  clean_files
  empty_trash
}

main
